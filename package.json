{
  "name": "react-express-template",
  "version": "1.0.0",
  "description": "A template for a full website project using react at frontend and express at backend.",
  "main": "server.js",
  "scripts": {
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir build",
    "bundle": "webpack",
    "start": "npm run build && npm run bundle && node build/server.js",
    "watch": "npm-watch start"
  },
  "watch": {
    "start": {
      "patterns": [
        "src",
        "views"
      ],
      "extensions": "js,ejs",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kantlove/react-express-template.git"
  },
  "keywords": [
    "web",
    "react",
    "express"
  ],
  "author": "minhthai",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kantlove/react-express-template/issues"
  },
  "homepage": "https://github.com/kantlove/react-express-template#readme",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "npm-watch": "^0.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "webpack": "^3.3.0"
  }
}
